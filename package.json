{
  "name": "dayz-community-template",
  "version": "1.1.3",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "clean": "rimraf .next tw-dr.css next-env.d.ts tsconfig.tsbuildinfo",
    "clean:full": "pnpm run clean && rimraf .turbo node_modules pnpm-lock.yaml",
    "start": "node .next/standalone/server.js",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "up:minor": "pnpm up -r",
    "up:major": "pnpm up -r --latest",
    "up:components": "pnpm dlx shadcn@latest add -y button drawer dropdown-menu scroll-area select table",
    "up:bump": "pnpm up:major && pnpm up:components",
    "tw:dr": "pnpm dlx @tailwindcss/cli -i src/app/globals.css -o ./tw-dr.css --minify"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.1",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.18",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  }
}
